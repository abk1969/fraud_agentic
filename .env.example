# Google API Configuration
GOOGLE_API_KEY=your_google_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./data/fraudshield.db
# For PostgreSQL:
# DATABASE_URL=postgresql://fraudshield:password@localhost:5432/fraudshield

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO

# Model Configuration
LLM_MODEL=gemini-flash-latest
EMBEDDING_MODEL=text-embedding-004

# RL Configuration
RL_LEARNING_RATE=0.0001
RL_GAMMA=0.99
RL_ENTROPY_COEF=0.01

# Cost-Sensitive Rewards (from paper)
REWARD_TRUE_POSITIVE=10
REWARD_TRUE_NEGATIVE=1
REWARD_FALSE_POSITIVE=-5
REWARD_FALSE_NEGATIVE=-50

# Security
SECRET_KEY=your_secret_key_here
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# PostgreSQL (required for production)
POSTGRES_USER=fraudshield
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=fraudshield

# ===========================================
# Dokploy Deployment Settings
# ===========================================

# Domain Configuration (for Traefik)
FRONTEND_DOMAIN=fraudshield.yourdomain.com
BACKEND_DOMAIN=api.fraudshield.yourdomain.com

# Frontend URLs (must match your domain)
NEXT_PUBLIC_API_URL=https://api.fraudshield.yourdomain.com
NEXT_PUBLIC_WS_URL=wss://api.fraudshield.yourdomain.com/ws

# Allowed hosts for CORS
ALLOWED_HOSTS=fraudshield.yourdomain.com,api.fraudshield.yourdomain.com
